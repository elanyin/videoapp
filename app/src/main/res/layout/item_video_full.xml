<?xml version="1.0" encoding="utf-8"?>
<!-- 全屏视频播放页的 ViewHolder 布局 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ExoPlayer 的渲染视图，用于显示视频画面 -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        app:resize_mode="fit" />     <!-- 视频缩放模式：适应屏幕 -->

    <!-- 视频封面图。在视频加载时显示，防止黑屏 -->
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 播放/暂停的居中图标。默认隐藏，在视频暂停时显示 -->
    <ImageView
        android:id="@+id/iv_play_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/ic_media_play"
        android:visibility="gone"
        app:tint="#A0FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 右侧垂直排列的交互按钮栏 -->
    <LinearLayout
        android:id="@+id/layout_right_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 作者头像 -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/shape_circle_white_border"
                android:padding="1dp"
                android:src="@mipmap/ic_launcher_round" />

            <!-- “+”号关注按钮 -->
            <ImageView
                android:id="@+id/iv_follow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="-2dp"
                android:src="@android:drawable/ic_input_add"
                android:background="@drawable/shape_circle_red"
                app:tint="#FFFFFF"/>
        </FrameLayout>

        <!-- 点赞按钮 -->
        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_heart_white"
            tools:tint="#FFFFFF" />

        <!-- 点赞数 -->
        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="12.5w"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- 评论按钮 -->
        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_comment_white"
            tools:tint="#FFFFFF" />

        <!-- 评论数 -->
        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="3288"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- 分享按钮 -->
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_share_white"
            tools:tint="#FFFFFF" />

        <!-- 分享文字 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

    </LinearLayout>

    <!-- 左下角的作者和标题信息区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/layout_right_bar"
        app:layout_constraintEnd_toStartOf="@id/layout_right_bar"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 作者名 -->
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者名"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- 视频标题/文案 -->
        <TextView
            android:id="@+id/tv_title_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="这里是视频的详细文案内容，可能会比较长，需要支持换行显示..."
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>